@model IEnumerable<WebApplication1.Models.HotelRoom>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:darkmagenta">Room Details</h2>

<p>
    @Html.ActionLink("Add Room", "Create", null, new { @class = "btn btn-create" })
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.RoomNumber)</th>
            <th>@Html.DisplayNameFor(model => model.RoomType)</th>
            <th>@Html.DisplayNameFor(model => model.AvailabilityStatus)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Capacity)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.RoomType)</td>
                <td>
                    @if (item.AvailabilityStatus)
                    {
                        <span class="status-available">&#10003;</span> <!-- Green Check for available -->
                    }
                    else
                    {
                        <span class="status-unavailable">&#10006;</span> <!-- Red X for unavailable -->
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.RoomID }, new { @class = "btn btn-edit" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.RoomID }, new { @class = "btn btn-details" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.RoomID }, new { @class = "btn btn-delete" })
                </td>
            </tr>
        }

    </tbody>
</table>
<p>@Html.ActionLink("Back", "AdminDashboard", "AdminLogin", null, new { @class = "btn btn-primary" })</p>

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            padding: 10px;
            text-align: left;
        }

    .table-bordered th, .table-bordered td {
        border: 1px solid #ddd;
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    .btn {
        padding: 6px 12px;
        text-decoration: none;
        border-radius: 4px;
        color: white;
        margin-right: 5px; /* Add some spacing between buttons */
        font-size: 14px;
        border: none; /* Remove border for a cleaner look */
    }

    .btn-create {
        background-color: #28a745; /* Green for 'Create New' */
    }

    .btn-edit {
        background-color: #007bff; /* Blue for 'Edit' */
    }

    .btn-details {
        background-color: #17a2b8; /* Cyan for 'Details' */
    }

    .btn-delete {
        background-color: #dc3545; /* Red for 'Delete' */
    }

    .btn:hover {
        opacity: 0.8;
    }

    .status-available {
        color: #28a745; /* Green check color */
        font-size: 20px; /* Increase size for visibility */
    }

    .status-unavailable {
        color: #dc3545; /* Red X color */
        font-size: 20px; /* Increase size for visibility */
    }

    h2 {
        color: #333;
    }
    body {
        background-size: cover;
        background-image: url('../../models/images/coffee-shop-with-blurred-effect (1).jpg');
    }

</style>

