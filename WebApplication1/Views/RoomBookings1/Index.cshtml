@model IEnumerable<WebApplication1.Models.RoomBooking>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:darkmagenta">Customer Details</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
            <th>@Html.DisplayNameFor(model => model.CheckInDate)</th>
            <th>@Html.DisplayNameFor(model => model.CheckOutDate)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.HotelRoom.RoomNumber)</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                <td>@Html.DisplayFor(modelItem => item.CheckInDate)</td>
                <td>@Html.DisplayFor(modelItem => item.CheckOutDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.HotelRoom.RoomNumber)</td>
               
            </tr>
        }
    </tbody>
</table>
<p>@Html.ActionLink("Back", "AdminDashboard", "AdminLogin", null, new { @class = "btn btn-primary" })</p>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa; /* Light gray background */
        margin: 20px; /* Add margin around the body */
    }

    h2 {
        color: #333; /* Dark gray for headings */
        margin-bottom: 20px; /* Space below the heading */
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd; /* Border around cells */
        }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f2f2f2; /* Light gray for odd rows */
    }

    .table th {
        background-color: #007bff; /* Blue background for headers */
        color: white; /* White text for headers */
    }

    .table td {
        color: #555; /* Darker text for body */
    }
    body {
        background-size: cover;
        background-image: url('../../models/images/coffee-shop-with-blurred-effect (1).jpg');
    }
</style>