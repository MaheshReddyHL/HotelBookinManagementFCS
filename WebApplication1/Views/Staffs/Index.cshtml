@model IEnumerable<WebApplication1.Models.Staff>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:darkmagenta">Staff Details</h2>

<p>
    @Html.ActionLink("Add Staff", "Create", null, new { @class = "btn btn-create" })
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.StaffName)</th>
            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.StaffRole)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.StaffName)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.StaffRole)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.StaffID }, new { @class = "btn btn-edit" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.StaffID }, new { @class = "btn btn-details" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.StaffID }, new { @class = "btn btn-delete" })
                </td>
            </tr>
        }
    </tbody>
</table>
<p>@Html.ActionLink("Back", "AdminDashboard", "AdminLogin", null, new { @class = "btn btn-primary" })</p>

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            padding: 10px;
            text-align: left;
        }

    .table-bordered th, .table-bordered td {
        border: 1px solid #ddd;
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    .btn {
        padding: 6px 12px;
        text-decoration: none;
        border-radius: 4px;
        color: white;
        margin-right: 5px; /* Add some spacing between buttons */
        font-size: 14px;
        border: none; /* Remove border for a cleaner look */
    }

    .btn-create {
        background-color: #28a745; /* Green for 'Create New' */
    }

    .btn-edit {
        background-color: #007bff; /* Blue for 'Edit' */
    }

    .btn-details {
        background-color: #17a2b8; /* Cyan for 'Details' */
    }

    .btn-delete {
        background-color: #dc3545; /* Red for 'Delete' */
    }

    .btn:hover {
        opacity: 0.8;
    }

    h2 {
        color: #333;
    }
    body {
        background-size: cover;
        background-image: url('../../models/images/coffee-shop-with-blurred-effect (1).jpg');
    }
</style>


