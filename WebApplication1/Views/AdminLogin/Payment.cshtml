@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Page</title>
    <style>
        /* General Styles */

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f0f5;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-size: cover;
            background-image: url('../../models/images/banking-4896669 (1).jpg');
        }

        h1 {
            text-align: center;
            color: #333;
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        h2 {
            color: #555;
            font-size: 1.8rem;
            text-align: center;
            margin-bottom: 20px;
        }

        .container {
            max-width: 600px;
            background-color: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            text-align: left;
        }

        .payment-options {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .payment-method {
            display: flex;
            align-items: center;
            cursor: pointer;
        }

            .payment-method label {
                margin-left: 10px;
                color: #333;
                font-size: 1rem;
            }

        .payment-form {
            margin-top: 20px;
            display: none;
        }

            .payment-form.active {
                display: block;
            }

            /* Form Styling */
            .payment-form label {
                display: block;
                margin-bottom: 10px;
                font-size: 1rem;
                color: #333;
            }

            .payment-form input {
                width: 100%;
                padding: 12px;
                margin-bottom: 20px;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 1rem;
            }

            .payment-form button {
                width: 100%;
                padding: 12px;
                background-color: #28a745;
                color: #fff;
                font-size: 1.1rem;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .payment-form button:hover {
                    background-color: #218838;
                }
    </style>
</head>
<body>

    <div class="container">
        <h1>Payment Page</h1>
        <div class="payment-options">
            <h2>Select Payment Method</h2>
            <div class="payment-method">
                <input type="radio" name="payment-method" id="upi" onclick="showPaymentForm('upi-form')" checked>
                <label for="upi">UPI Payment</label>
            </div>
            <div class="payment-method">
                <input type="radio" name="payment-method" id="card" onclick="showPaymentForm('card-form')">
                <label for="card">Card Payment</label>
            </div>
        </div>

        <!-- UPI Form -->
        <div class="payment-form active" id="upi-form">
            <h3>UPI Payment</h3>
            <label for="upi-id">Enter UPI ID</label>
            <input type="text" id="upi-id" placeholder="example@upi" required>
            <button type="button" onclick="submitPayment('upi')">Pay with UPI</button>
        </div>

        <!-- Card Form -->
        <div class="payment-form" id="card-form">
            <h3>Card Payment</h3>
            <label for="card-number">Card Number</label>
            <input type="text" id="card-number" placeholder="1234 5678 9101 1121" required>
            <label for="card-name">Name on Card</label>
            <input type="text" id="card-name" placeholder="John Doe" required>
            <label for="expiry-date">Expiry Date</label>
            <input type="text" id="expiry-date" placeholder="MM/YY" required>
            <label for="cvv">CVV</label>
            <input type="password" id="cvv" placeholder="123" required>
            <button type="button" onclick="submitPayment('card')">Pay with Card</button>
        </div>
    </div>

    <script>
        // Function to show and hide forms based on payment method selection
        function showPaymentForm(formId) {
            var upiForm = document.getElementById('upi-form');
            var cardForm = document.getElementById('card-form');

            // Hide both forms
            upiForm.classList.remove('active');
            cardForm.classList.remove('active');

            // Show the selected form
            document.getElementById(formId).classList.add('active');
        }

        // Function to handle form submission (can be replaced with actual logic)
        function submitPayment(method) {
            if (method === 'upi') {
                alert('payment Done Sucessfully...');
                window.location.href = "/AdminLogin/Sucess/"; // Replace with actual UPI payment gateway URL
            } else if (method === 'card') {
                alert('Payment Done Sucessfully...');
                window.location.href = "/AdminLogin/Sucess/"; // Replace with actual card payment gateway URL
            }
        }
    </script>

</body>
</html>